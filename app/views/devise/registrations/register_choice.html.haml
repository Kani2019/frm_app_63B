.sign_up
  = render "header"
  .main
    .login-form
      .login-form__new
        .login-form__new-registrations
          新規会員登録
      .login-form__lower
        = form_with model: @user, local: true, url: user_session_path, id: 'new_user', class: 'new_user' do |f|
          .login-form__lower-address
            .box-address
              = link_to 'メールアドレスで登録', new_user_registration_path, class: 'btn'
          .login-form__lower-sns
            .box-facebook
              = link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, class: 'btn', method: :post
            .box-google
              = link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, class: 'btn', method: :post
    .footer
      = render "devise/footer"