.products_buy
  .header
    = render partial:"products/shared/header"

  .main_contents
    .main_details
      .verification
        購入内容の確認
      .product_details
        .main
          .image
            = image_tag @image.first.images.url, alt: @product.name, class: "product"
          .details
            .title
              = @product.name
            .money
              = "#{@product.price}" + "円"

      .purchase_registration
        .purchase_registration_main
          .payment
            支払い金額	
          .amount
            = "#{@product.price}" + "円"
        - if @user.credit_card.present?
          .purchase_function
            .credit_card_info_title
              クレジットカード情報
              = render "credit_cards/shared/credit_card_info"
            .purchase_function__btn
              = link_to "登録クレジットカードで購入する", pay_product_path(product_id: @product.id), method: :post, class: "btn"
        - else 
          .purchase_none_btn
            = link_to "クレジットカードを登録してください", new_credit_card_path, class: "btn"

  .footer
    = render partial:"devise/footer"