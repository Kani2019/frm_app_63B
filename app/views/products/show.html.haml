// frm_appの商品詳細ページのマークアップ
.top-page-header
  = render "products/shared/header"
  
.goods__details
  .goods__details--title 
    = @product.name
  .goods__details--summary
    = "#{@product.name}は#{@product.user.nickname}さんから出品されました。NIKEの商品で、○○県から２−３日で発送されます。"
  .goods__details--mains
    .goods__details--mains--images
      .active-image
      .each-images
        = @product.images
    .goods__details--mains--table
      %table{ border: "1", bordercolor: "#cccccc"}
        %tr 
          %td.left-data{height: "40"} 出品者
          %td.right-data user_name 評価
        %tr  
          %td.left-data{height: "40"} カテゴリー
          %td.right-data メンズ 靴 スニーカー
        %tr
          %td.left-data{height: "40px"} ブランド
          %td.right-data ナイキ
        %tr  
          %td.left-data{height: "40px"}  商品のサイズ
          %td.right-data 26.5cm
        %tr
          %td.left-data{height: "40px"}  商品の状態
          %td.right-data 傷や汚れなし
        %tr
          %td.left-data{height: "40px"}  配送料の負担
          %td.right-data 送料込み（出品者負担）
        %tr
          %td.left-data{height: "40px"} 配送の方法
          %td.right-data 郵便局
        %tr
          %td.left-data{height: "40px"}  配送元地域
          %td.right-data  未定
        %tr
          %td.left-data{height: "40px"}  発送日の目安
          %td.right-data 2~3日

  .goods__details--price
    %span ¥2,500 
    (税込)送料込み

  // -if current_user_id == products.user_id

  .goods__details--buybtn
    = link_to "購入画面にすすむ", '#', class: "btn"
      
  .goods__details--comment
    まだまだ使えます。
  .goods__details--else
    %button.good-btn
      いいね!　2
    %button.report-btn
      不適切な商品の報告
    = link_to '#', class: "safety-rule" do
      %i.fas.fa-lock.lock-icon 
      = "安心・安全への取り組み"

